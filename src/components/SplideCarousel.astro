<!-- Main Carousel -->
<div id="shader-carousel" class="splide main-carousel">
  <div class="splide__track">
    <ul class="splide__list">
      <li class="splide__slide"><img src="/images/1.jpg" alt="Slide 1" /></li>
      <li class="splide__slide"><img src="/images/2.jpg" alt="Slide 2" /></li>
    </ul>
  </div>
</div>

<!-- Thumbnail Carousel -->
<div id="thumbnail-carousel" class="splide thumbnail-carousel">
  <div class="splide__track">
    <ul class="splide__list">
      <li class="splide__slide"><img src="/images/1.jpg" alt="Thumb 1" /></li>
      <li class="splide__slide"><img src="/images/2.jpg" alt="Thumb 2" /></li>
    </ul>
  </div>
</div>

<!-- @ts-ignore -->
<script type="module" client:load>
  import { initShaderCarousel } from '../scripts/splideShaderInit.js';
  initShaderCarousel();
</script>

<style>
    .main-carousel {
    width: 100%;
    height: 75vh;
    margin-bottom: 1rem;
  }

  .main-carousel .splide__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .thumbnail-carousel {
    width: 100%;
  }

  .thumbnail-carousel .splide__slide {
    width: 100px;
    height: 60px;
    opacity: 0.5;
    cursor: pointer;
    margin-right: 10px;
  }

  .thumbnail-carousel .splide__slide.is-active {
    opacity: 1;
    border: 2px solid white;
  }

  .thumbnail-carousel .splide__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  </style>

